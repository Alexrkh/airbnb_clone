     <center>
      <h1> Create your account here</h1>
 
       <%= form_for :user, url: users_path do |form| %>
       <div class="text-field">
      <%= form.label :email %>
       <%= form.text_field :email, type: 'email' %>
 
         <div class="password-field">
           <%= form.label :password %>
           <%= form.password_field :password %>
         </div>
          <%= form.submit %>
         <%end%>
        
         </center> 